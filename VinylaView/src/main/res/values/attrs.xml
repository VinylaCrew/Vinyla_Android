<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="title" format="string" />
    <attr name="vinylImageUrl" format="string" />

    <declare-styleable name="VinylaEditText">
        <attr name="isRequired" format="boolean" />
        <attr name="isOptional" format="boolean" />
        <attr name="title" />
        <attr name="hint" format="string" />
        <attr name="minInputHeight" format="dimension" />
        <attr name="inputVisibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="4" />
            <enum name="gone" value="8" />
        </attr>
        <attr name="inputTextSize" format="dimension" />
        <attr name="inputTextPaddingTop" format="dimension" />
    </declare-styleable>

    <declare-styleable name="TopBar">
        <attr name="title" />
    </declare-styleable>

    <declare-styleable name="VinylView">
        <attr name="vinylImageUrl" />
    </declare-styleable>

    <declare-styleable name="VinylDisplayView">
        <attr name="vinylImageUrl" />
    </declare-styleable>
</resources>
