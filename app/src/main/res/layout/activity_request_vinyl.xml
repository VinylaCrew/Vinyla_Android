<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:background="@color/black141415"
                tools:context=".presentation.vinyl.request.RequestVinyl">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    app:layout_constraintBottom_toBottomOf="@+id/textView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textView"
                    app:srcCompat="@drawable/icn_btn_cansel" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="17dp"
                    android:text="찾는 바이닐 요청하기"
                    android:textColor="@color/grayEE"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/imageView5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.vinyla_android.view.widget.VinylaEditText
                    android:id="@+id/textView37"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="30dp"
                    app:inputVisibility="gone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView"
                    app:title="앨범 이미지 업로드" />

                <include
                    android:id="@+id/buttonAddImage"
                    layout="@layout/button_load_image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="5dp"
                    app:count="@{1}"
                    app:layout_constraintStart_toStartOf="@+id/textView37"
                    app:layout_constraintTop_toBottomOf="@+id/textView37" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="15dp"
                    android:elevation="0dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/buttonAddImage"
                    app:layout_constraintStart_toEndOf="@+id/buttonAddImage"
                    app:layout_constraintTop_toTopOf="@+id/buttonAddImage">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:src="@tools:sample/avatars" />

                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/buttonDeleteImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@+id/cardView"
                    app:layout_constraintEnd_toEndOf="@+id/cardView"
                    app:layout_constraintStart_toEndOf="@+id/cardView"
                    app:layout_constraintTop_toTopOf="@+id/cardView"
                    app:srcCompat="@drawable/icn_img_delete" />

                <com.vinyla_android.view.widget.VinylaEditText
                    android:id="@+id/textAlbumTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/buttonAddImage"
                    app:layout_constraintTop_toBottomOf="@+id/buttonAddImage"
                    app:title="앨범명" />

                <com.vinyla_android.view.widget.VinylaEditText
                    android:id="@+id/textArtistName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="1dp"
                    app:layout_constraintEnd_toEndOf="@+id/textAlbumTitle"
                    app:layout_constraintStart_toStartOf="@+id/textAlbumTitle"
                    app:layout_constraintTop_toBottomOf="@+id/textAlbumTitle"
                    app:title="아티스트명" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    app:layout_constraintStart_toStartOf="@+id/textArtistName"
                    app:layout_constraintTop_toBottomOf="@+id/textArtistName"
                    app:srcCompat="@drawable/icn_login_complete" />

                <TextView
                    android:id="@+id/textView38"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="5dp"
                    android:text="기본정보를 정확한 풀네임으로 입력해주시면 더욱 원활하게 찾을 수 있어요."
                    android:textColor="@color/darkOrange"
                    android:textSize="13dp"
                    app:layout_constraintEnd_toEndOf="@+id/textArtistName"
                    app:layout_constraintStart_toEndOf="@+id/imageView11"
                    app:layout_constraintTop_toBottomOf="@+id/textArtistName" />

                <com.vinyla_android.view.widget.VinylaEditText
                    android:id="@+id/textMemo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    app:hint="발매일자, 수록곡, 장르 등 찾으시는 바이닐의 자세한 정보를\n남겨주세요."
                    app:isOptional="true"
                    app:isRequired="false"
                    app:layout_constraintEnd_toEndOf="@+id/textView38"
                    app:layout_constraintStart_toStartOf="@+id/textArtistName"
                    app:layout_constraintTop_toBottomOf="@+id/textView38"
                    app:minInputHeight="160dp"
                    app:title="메모">

                </com.vinyla_android.view.widget.VinylaEditText>

                <TextView
                    android:id="@+id/textView41"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="10dp"
                    android:text="@{@string/memo_text_counter(45)}"
                    android:textColor="@color/gray66"
                    app:layout_constraintBottom_toBottomOf="@+id/textMemo"
                    app:layout_constraintEnd_toEndOf="@+id/textMemo"
                    tools:text="45/100" />

                <TextView
                    android:id="@+id/buttonSubmit"
                    style="@style/BottomTextButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="5dp"
                    android:paddingTop="19dp"
                    android:paddingBottom="19dp"
                    android:text="요청하기"
                    app:layout_constraintBottom_toTopOf="@+id/textView39"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textMemo" />

                <TextView
                    android:id="@+id/textView39"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="16dp"
                    android:text="요청하신 바이닐은 검토 후 매월 말 일괄 업데이트 됩니다."
                    android:textColor="@color/gray88"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
